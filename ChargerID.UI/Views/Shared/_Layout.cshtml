<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @System.Web.Optimization.Styles.Render("~/Content/css")
</head>
<body>
    <div>
        <nav class="navbar navbar-default navbar-static-top">
            <div class="navbar-header">
                <a class="navbar-brand" style="padding-top: 3px;" href="/Dashboard">
                    <img src="images/evgeo5.png" width="100" />
                </a>
            </div>
            <div class="btn-group pull-right" style="margin-top: 15px;margin-right: 20px">
                <a>@Html.ActionLink("Sign In", "Index", "SignIn")</a>                                    
            </div>
        </nav>
        @RenderBody()
    </div>

    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>