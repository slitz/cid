@using ChargerID.UI;
@using ChargerID.UI.Models
@model MapModel

@{
    ViewBag.Title = "ChargerID Sign In";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChargerID Sign In</title>
</head>
<body>
    <nav class="navbar navbar-default navbar-static-top">
        <div class="navbar-header">
            <a class="navbar-brand" style="padding-top: 3px;" href="#">
                <img src="images/evgeo5.png" width="100" />
            </a>
        </div>
        <div class="btn-group pull-right" style="margin-top: 15px;margin-right: 20px">
            <a>@Html.ActionLink("Sign In", "Index", "SignIn")</a>                                    
        </div>
    </nav>

    <div class="container">
      <form class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus style="margin-bottom: 10px;">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" required style="margin-bottom: 10px;">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>
    </div> <!-- /container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../../../assets/js/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>
}